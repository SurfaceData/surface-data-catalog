datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model UserRoles {
  id    String @id
  role  String
}

model Dataset {
  id       String @id
  name     String
  language String
  task     String
  path     String
  license  String
}

model DatasetAccess {
  id        Int @id  @default(autoincrement())
  userId    String
  datasetId String
  // 0 - Unknown
  // 1 - Requested
  // 2 - Rejected
  // 3 - Accepted
  status    Int @default(0)

  @@unique([userId, datasetId])
}

model UserApiKey {
  id   String @id
  key  String @unique

  @@index([key])
}
