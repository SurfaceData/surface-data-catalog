datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model UserRoles {
  id    String @id
  role  String
}

model Dataset {
  id        String @id
  name      String
  task      String
  license   String
  readme    String @default("")
  subsets   DatasetSubset[]
}

model DatasetSubset {
  id        String @id
  language  String
  path      String
  dataset   Dataset @relation(fields: [datasetId], references: [id])
  datasetId String
}

model DatasetAccess {
  id        Int @id  @default(autoincrement())
  userId    String
  datasetId String
  // 0 - Unknown
  // 1 - Requested
  // 2 - Rejected
  // 3 - Accepted
  status    Int @default(0)

  @@unique([userId, datasetId])
}

model UserApiKey {
  id   String @id
  key  String @unique

  @@index([key])
}

model DownloadLog {
  id         Int @id @default(autoincrement())
  userId     String
  datasetId  String
  // 0 - Unknown
  // 1 - Accepted
  // 2 - Rejected
  statusCode Int
  createdAt  DateTime @default(now())
}
